{
    "name": "modules/auth-module",
    "description": "Laravel authentication module with login, register and password reset features. Supports both single-tenant and multi-tenant applications. Includes Web and API endpoints for Next.js integration.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Abdullah Zubeyir Yıldız",
            "email": "abdullahzubeyiryildiz@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0"
    },
    "suggest": {
        "laravel/sanctum": "API authentication için gereklidir (^4.0)",
        "laravel/socialite": "Social login için gereklidir (^5.0)",
        "modules/rbac-module": "Gelişmiş rol ve yetki yönetimi için (opsiyonel - kendi RoleService'i zaten var)"
    },
    "autoload": {
        "psr-4": {
            "Modules\\AuthModule\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Modules\\AuthModule\\Providers\\AuthModuleServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php artisan auth-module:install --quiet"
        ],
        "post-update-cmd": [
            "@php artisan auth-module:install --quiet"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
