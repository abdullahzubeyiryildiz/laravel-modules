{
    "name": "modules/notification-module",
    "description": "Reusable notification module for Laravel with Mail and SMS support. Supports multiple providers (SMTP, Mailgun, SendGrid for mail; Mutlucell, etc. for SMS)",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Abdullah Zubeyir Yıldız",
            "email": "abdullahzubeyiryildiz@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0"
    },
    "suggest": {
        "guzzlehttp/guzzle": "HTTP istekleri için (SMS sağlayıcıları için gerekli)"
    },
    "autoload": {
        "psr-4": {
            "Modules\\NotificationModule\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Modules\\NotificationModule\\Providers\\NotificationModuleServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
